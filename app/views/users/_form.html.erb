<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-5 mb-3 bg-secondary rounded", local: true) do |f|%>
      <div class="form-group row">
        <%= f.label :username, class: "col-2 col-form-control text-light"%>
        <div class="col-10">
          <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username"%>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :email, class: "col-2 col-form-control text-light"%>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter an email address"%>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password, class: "col-2 col-form-control text-light"%>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password"%>
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-outline-light")%>
      </div>
      <div class="form-group row justify-content-center">
        <%= link_to '[ Cancel Return to Articles Listing ]', articles_path, class: "text-info"%>
      </div>
      <% end %>
    </div>
  </div>
</div>
